				"source": [
					"# nb_fraud_score — Reads staged transactions and flags high-risk ones \n",
					"\n",
					"from pyspark.sql import SparkSession \n",
					"\n",
					"from pyspark.sql.functions import col, when \n",
					"\n",
					" \n",
					"\n",
					"spark = SparkSession.builder.getOrCreate() \n",
					"\n",
					" \n",
					"\n",
					"df = spark.read.parquet( \n",
					"\n",
					"    'abfss://synapse@adlsfrauddemo.dfs.core.windows.net/staging/fraud/') \n",
					"\n",
					" \n",
					"\n",
					"# KEY PARAMETER — change this value to demonstrate Git versioning \n",
					"\n",
					"THRESHOLD = 0.75 \n",
					"\n",
					" \n",
					"\n",
					"df_flagged = df.withColumn('flagged_high_risk', \n",
					"\n",
					"    when(col('fraud_score') > THRESHOLD, 1).otherwise(0)) \n",
					"\n",
					" \n",
					"\n",
					"df_flagged.write.mode('overwrite').parquet( \n",
					"\n",
					"    'abfss://synapse@adlsfrauddemo.dfs.core.windows.net/output/fraud_flagged/') \n",
					"\n",
					" \n",
					"\n",
					"count = df_flagged.filter(col('flagged_high_risk') == 1).count() \n",
					"\n",
					"print(f'Threshold: {THRESHOLD} | High-risk flagged: {count}') "
				],
				"execution_count": null
			}
		]
	}
